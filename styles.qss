/* PostureApp Stylesheet */

/* General Widget Styling */
QWidget {
    background-color: #1A1A2E; /* Default: deepCharcoal */
    color: #F0F0F5;          /* Default: offWhite */
    font-family: "Inter", "Segoe UI", Arial, sans-serif; /* Modern sans-serif font stack */
    font-size: 11pt; /* Base font size increased */
}

QMainWindow, QDialog {
    background-color: #1A1A2E; /* deepCharcoal */
}

/* Content Containers and Cards */
QFrame#ContentContainer, QTabWidget::pane {
    background-color: #2D2D3F; /* mediumDarkGray */
    border: none;
}

QGroupBox, QFrame.Card {
    background-color: #3C3C50; /* lightDarkGray */
    border: 1px solid #4A4A60; /* Slightly lighter for definition */
    border-radius: 8px;
    margin-top: 10px; /* For QGroupBox title spacing */
    padding: 10px;
}

QGroupBox::title {
    color: #F0F0F5;
    subcontrol-origin: margin;
    subcontrol-position: top left;
    padding: 0px 10px 5px 10px; /* top, right, bottom, left */
    font-weight: bold;
    font-size: 12pt;
}

/* Text Hierarchy */
QLabel#H1Title {
    color: #E0DFFF; /* highlightWhiteLilac */
    font-size: 22pt; /* Adjusted for new base */
    font-weight: bold;
    padding-bottom: 12px; /* Space below H1 */
    margin-bottom: 10px; /* Added margin */
}

QLabel#H2Title, QLabel.SectionTitle {
    color: #F0F0F5; /* offWhite */
    font-size: 15pt; /* Adjusted for new base */
    font-weight: 600; /* semi-bold */
    padding-top: 8px;
    padding-bottom: 8px;
    border-bottom: 1px solid #3C3C50; /* Subtle separator for section titles */
    margin-top: 10px; /* Added margin */
    margin-bottom: 5px; /* Added margin */
}

QLabel.BodyPrimary {
    color: #F0F0F5; /* offWhite */
    font-size: 11pt; /* Aligned with base */
}

QLabel.BodySecondary, QLabel.Caption {
    color: #B0B0C0; /* lightGray */
    font-size: 10pt;  /* Adjusted relative to new base */
}

/* Styling for QLabel used as a link */
QLabel a {
    color: #8AAEFF; /* A lighter, friendly blue for links */
    text-decoration: none; /* Remove underline by default */
}

QLabel a:hover {
    color: #A8C5FF; /* Brighter on hover */
    text-decoration: underline; /* Underline on hover for affordance */
}

/* Error Text Styling */
.ErrorText, QLabel#ErrorLabel {
    color: #FF6B6B; /* A clear but not overly harsh red */
    font-size: 9.5pt;
    font-weight: 500;
    /* Add padding or margin if needed, or handle in layout */
    /* padding: 5px; */
}

/* Buttons */
QPushButton {
    background-color: #3C3C50; /* lightDarkGray */
    color: #F0F0F5; /* offWhite */
    border: 1px solid #4A4A60; /* Subtle border for default buttons */
    padding: 9px 18px; /* Increased padding */
    border-radius: 8px; /* Slightly more rounded */
    min-height: 2.3em; /* Increased min-height for better touch */
    font-weight: 500; /* Medium weight */
    /* Basic transition placeholder - actual transitions are hard in QSS */
    /* transition: background-color 0.2s ease-in-out, border-color 0.2s ease-in-out; */
}

QPushButton:hover {
    background-color: #45455A; /* Slightly lighter gray for hover */
    border-color: #55556F; /* Darker border on hover */
}

QPushButton:pressed {
    background-color: #353548; /* Darker for press */
    border-color: #4A4A60;
}

QPushButton:disabled {
    background-color: #2D2D3F;
    color: #6c6c7a;
    border-color: #3C3C50; /* Darker border for disabled */
}

QPushButton#PrimaryCTA {
    background-color: #7B61FF; /* purple */
    color: #FFFFFF; /* Brighter white for better contrast on purple */
    border: none;
    font-weight: 600; /* Bold for primary action */
    padding: 10px 20px; /* Slightly more padding for primary */
}

QPushButton#PrimaryCTA:hover {
    background-color: #6A50DD; /* Darker purple */
}

QPushButton#PrimaryCTA:pressed {
    background-color: #5840C0; /* Even darker purple */
}

QPushButton#PrimaryCTA:disabled {
    background-color: #4A3B99; /* Desaturated purple */
    color: #988DE0; /* Lighter text for disabled primary */
    border: none;
}

/* Secondary Button Style (Example, use with objectName or dynamic property) */
QPushButton.Secondary {
    background-color: transparent;
    color: #AEAEB5; /* Lighter text */
    border: 1px solid #4A4A60;
}
QPushButton.Secondary:hover {
    background-color: #353548; /* Subtle background on hover */
    color: #F0F0F5;
    border-color: #55556F;
}
QPushButton.Secondary:pressed {
    background-color: #2D2D3F;
}

/* Input Fields */
QLineEdit, QTextEdit, QSpinBox, QDoubleSpinBox, QComboBox {
    background-color: #2D2D3F; /* mediumDarkGray */
    color: #F0F0F5; /* offWhite */
    border: 1px solid #3C3C50; /* lightDarkGray */
    border-radius: 8px; /* Match button roundness */
    padding: 10px; /* Increased padding for a modern feel */
    font-size: 10pt; /* Slightly smaller for input fields or keep 11pt for consistency */
    min-height: 2.3em; /* Match button height for visual rhythm */
}

QLineEdit:focus, QTextEdit:focus, QSpinBox:focus, QDoubleSpinBox:focus, QComboBox:focus {
    border: 1px solid #7B61FF; /* purple accent */
    background-color: #353548; /* Slightly lighter on focus */
    /* box-shadow: 0 0 0 2px rgba(123, 97, 255, 0.3); */ /* Ideal, but box-shadow not in QSS */
}

QTextEdit {
    selection-background-color: #7B61FF; /* purple */
    selection-color: #F0F0F5; /* offWhite */
}

QComboBox::drop-down {
    border: none;
    subcontrol-origin: padding;
    subcontrol-position: top right;
    width: 20px;
}

QComboBox::down-arrow {
    /* Consider using an SVG icon here for better scaling and styling */
    /* image: url(:/icons/dropdown-arrow-offwhite.svg); */
    /* For now, a simple character, replace with SVG for production */
     border: 1px solid #7B61FF;
     border-radius: 3px;

}
QComboBox::down-arrow:on { /* shift the arrow when popup is open */
    top: 1px;
    left: 1px;
}

/* ScrollBars */
QScrollBar:vertical {
    border: none;
    background: #2D2D3F; /* mediumDarkGray */
    width: 12px; /* Slightly wider */
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:vertical {
    background: #7B61FF; /* purple */
    min-height: 30px; /* Slightly taller handle */
    border-radius: 6px;
}
QScrollBar::handle:vertical:hover {
    background: #937FFF; /* Lighter purple */
}
QScrollBar::add-line:vertical, QScrollBar::sub-line:vertical {
    border: none;
    background: none;
    height: 0px;
}
QScrollBar::add-page:vertical, QScrollBar::sub-page:vertical {
    background: none;
}

QScrollBar:horizontal {
    border: none;
    background: #2D2D3F; /* mediumDarkGray */
    height: 12px;
    margin: 0px 0px 0px 0px;
}
QScrollBar::handle:horizontal {
    background: #7B61FF; /* purple */
    min-width: 30px; /* Slightly wider handle */
    border-radius: 6px;
}
QScrollBar::handle:horizontal:hover {
    background: #937FFF; /* Lighter purple */
}
QScrollBar::add-line:horizontal, QScrollBar::sub-line:horizontal {
    border: none;
    background: none;
    width: 0px;
}
QScrollBar::add-page:horizontal, QScrollBar::sub-page:horizontal {
    background: none;
}


/* Tooltips */
QToolTip {
    background-color: #222235; /* Slightly darker than main bg for contrast */
    color: #F0F0F5;           /* offWhite */
    border: 1px solid #7B61FF; /* purple accent */
    padding: 8px 12px; /* More horizontal padding */
    border-radius: 6px; /* Consistent roundness */
    font-size: 9.5pt; /* Clearer tooltip text */
    opacity: 240; /* Slight transparency */
}

/* Tab Widget Styling */
QTabWidget::pane {
    border-top: 2px solid #7B61FF; /* purple line indicating active pane area */
    background-color: #2D2D3F; /* mediumDarkGray */
}

QTabBar::tab {
    background: #3C3C50; /* lightDarkGray */
    color: #B0B0C0;      /* lightGray */
    border: 1px solid #4A4A60;
    border-bottom: none; /* continuit√© with pane */
    border-top-left-radius: 8px; /* Match other roundness */
    border-top-right-radius: 8px; /* Match other roundness */
    padding: 12px 22px; /* Increased padding */
    margin-right: 2px; /* space between tabs */
    font-weight: 500;
}

QTabBar::tab:selected, QTabBar::tab:hover {
    background: #2D2D3F; /* mediumDarkGray, same as pane */
    color: #F0F0F5;      /* offWhite */
}

QTabBar::tab:selected {
    border-color: #7B61FF; /* purple border for selected tab */
    border-bottom-color: #2D2D3F; /* Make bottom border match pane bg */
}

/* CheckBox and RadioButton */
QCheckBox, QRadioButton {
    spacing: 8px; /* Space between indicator and text */
    color: #F0F0F5;
    background: transparent;
}

QCheckBox::indicator, QRadioButton::indicator {
    width: 20px; /* Increased size */
    height: 20px; /* Increased size */
    border: 2px solid #7B61FF; /* purple */
    border-radius: 6px; /* More rounded */
    background-color: #2D2D3F; /* mediumDarkGray */
}

QCheckBox::indicator:checked {
    /* background-color: #7B61FF; */ /* purple fill */
    /* image: url(:/icons/checkmark-white.svg); */ /* Replace with actual checkmark SVG */
    /* For now, a simple border change */
    border: 3px solid #00C853; /* green */
}
QCheckBox::indicator:disabled, QRadioButton::indicator:disabled {
    border-color: #4A4A60;
    background-color: #3C3C50;
}


QRadioButton::indicator {
    border-radius: 9px; /* Circular */
}

QRadioButton::indicator:checked {
    background-color: #7B61FF; /* Fill with accent color */
    image: url(''); /* Remove default image if any, rely on background */
}
QRadioButton::indicator:checked::after { /* Custom checkmark (difficult in QSS without SVG) */
    /* For a dot: */
    /* content: '\2022'; */ /* Bullet character, needs font support */
    /* display: block; */
    /* position: absolute; */
    /* top: 2px; left: 2px; right: 2px; bottom: 2px; */ /* Adjust for centering */
    /* background-color: #FFFFFF; */
    /* border-radius: 50%; */
}

/* Message Box Styling (Informational/Error popups) */
QMessageBox {
    background-color: #2D2D3F; /* Consistent with content panes */
    border: 1px solid #4A4A60; /* Subtle border */
    border-radius: 8px; /* Consistent rounding */
}

QMessageBox QLabel {
    color: #F0F0F5;
    font-size: 11pt; /* Match base app font */
    padding: 10px; /* Add some padding around the text */
}

QMessageBox QPushButton {
    /* QPushButton styles are inherited, which is good. */
    /* We can add specific overrides if needed, e.g., for button order or spacing */
    min-width: 90px; /* Ensure buttons are adequately sized */
    margin: 5px; /* Add some margin around buttons */
}

/* Ensure the icon in QMessageBox is visible against the dark background if it's a standard one */
QMessageBoxStandardIcon#qt_msgboxexclam_icon,
QMessageBoxStandardIcon#qt_msgboxinfo_icon,
QMessageBoxStandardIcon#qt_msgboxwarn_icon,
QMessageBoxStandardIcon#qt_msgboxcritical_icon {
    /* This is tricky, as standard icons might not be easily stylable via QSS */
    /* Best approach is to use custom icons in QMessageBox if default ones don't fit theme */
    /* For now, this is a placeholder. Actual IDs might differ or might not be targetable. */
}

/* Item Views (Lists, Tables, Trees) */
QListView, QTreeView, QTableView {
    background-color: #2D2D3F; /* mediumDarkGray */
    color: #F0F0F5;
    border: 1px solid #3C3C50; /* lightDarkGray */
    border-radius: 6px;
    alternate-background-color: #353548; /* Slightly different for alternating rows */
    selection-background-color: #7B61FF; /* purple */
    selection-color: #F0F0F5;
}

QHeaderView::section {
    background-color: #3C3C50; /* lightDarkGray */
    color: #F0F0F5;
    padding: 6px;
    border: 1px solid #2D2D3F; /* mediumDarkGray to separate headers */
    font-weight: bold;
}

/* Specific for success/positive status */
.SuccessText {
    color: #00C853; /* green */
    font-weight: bold;
}

/* Placeholder for icons that need a specific background color */
/* Example: QFrame.FeaturedIconContainer.IdeaType */
QFrame.FeaturedIconContainer {
    border-radius: 8px; /* RoundedSquare */
    padding: 10px;
    /* Icon glyph color to be set on the QLabel/IconWidget inside */
}
QFrame.IdeaType {
    /* Gradient is hard with QSS background. Consider SVG or custom paint. */
    /* Fallback solid color or one end of the gradient: */
    background-color: #5C95FF; /* softBlue, part of gradientBluePurple */
}
QFrame.SystemType {
    background-color: #7B61FF; /* purple */
}
QFrame.SuccessType {
    background-color: #00C853; /* green */
}

QLabel.IconGlyph { /* Assuming icon glyphs inside featured containers are QLabels */
    color: #F0F0F5; /* offWhite */
    background-color: transparent; /* Ensure no double background */
}

/* Custom Notification Toast Styling */
QWidget#NotificationToastContainer {
    background-color: #28283A; /* Slightly different from main bg for pop */
    border-radius: 10px; /* More prominent rounding */
    border: 1px solid #7B61FF; /* Accent border */
    /* Shadow is applied via QGraphicsDropShadowEffect in Python */
}

QLabel#NotificationToastMessage {
    color: #F5F5F5; /* Brighter white */
    font-size: 10.5pt; /* Slightly larger for readability */
    padding: 8px; /* Internal padding */
    font-weight: 500;
}

/* Slider Styles */
QSlider::groove:horizontal {
    border: 1px solid #3C3C50;
    height: 8px; /* groove height */
    background: #2D2D3F;
    margin: 2px 0;
    border-radius: 4px;
}

QSlider::handle:horizontal {
    background: #7B61FF; /* purple */
    border: 1px solid #7B61FF;
    width: 18px; /* handle width */
    height: 18px; /* handle height, make it slightly larger than groove */
    margin: -5px 0; /* align handle vertically */
    border-radius: 9px; /* circular handle */
}
QSlider::handle:horizontal:hover {
    background: #937FFF;
    border: 1px solid #937FFF;
}

QSlider::groove:vertical {
    border: 1px solid #3C3C50;
    width: 8px;
    background: #2D2D3F;
    margin: 0 2px;
    border-radius: 4px;
}

QSlider::handle:vertical {
    background: #7B61FF;
    border: 1px solid #7B61FF;
    height: 18px;
    width: 18px;
    margin: 0 -5px;
    border-radius: 9px;
}
QSlider::handle:vertical:hover {
    background: #937FFF;
    border: 1px solid #937FFF;
}

/* Specific class styling for webcam label placeholder */
QLabel#WebcamFeedLabel {
    background-color: #252535; /* Slightly different dark shade for the feed area */
    color: #808090; /* Placeholder text color */
    border: 1px dashed #4A4A60; /* Dashed border to indicate it's a placeholder/feed area */
    border-radius: 8px;
}

/* Login/Auth View specific styles (Example, if these ObjectNames are used) */
QWidget#LoginViewContainer, QWidget#SignUpDialogContainer {
    /* background-color: #242438; */ /* Slightly different background for auth pages if needed */
}

QLineEdit#EmailInput, QLineEdit#PasswordInput {
    /* Specific styling for auth inputs if needed, e.g. icons inside */
}

/* Dashboard specific styles */
QWidget#DashboardMainContent {
    /* border: 1px solid red; */ /* For debugging layout */
}

QFrame#CameraViewFrame {
    background-color: black; /* Typically camera feed has black background */
    border-radius: 8px;
    border: 1px solid #3C3C50;
}

QLabel#StatusIndicatorLabel {
    font-weight: bold;
    font-size: 12pt;
    padding: 5px;
    border-radius: 4px;
}

