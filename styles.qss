/* Style for the QFrame that might hold stats or graphs */
QFrame#StatsDisplayFrame {
    background-color: #303042; /* A slightly distinct background for stats modules */
    border-radius: 8px;
    padding: 10px;
}

/* Update Notification Label Style */
QLabel#UpdateNotificationLabel {
    background-color: #3E4A6B; /* A calm blue/grey for info */
    color: #E0EFFF; /* Light text for contrast */
    border: 1px solid #506080;
    border-radius: 6px;
    padding: 10px 15px;
    font-size: 10pt;
    font-weight: 500;
    margin-bottom: 10px; /* Space below it */
}
QLabel#UpdateNotificationLabel a {
    color: #A8C5FF;
    text-decoration: underline;
}
QLabel#UpdateNotificationLabel a:hover {
    color: #FFFFFF;
}

/* Status Alert Label (for errors, warnings like webcam issues) */
QLabel#StatusAlertLabel {
    background-color: #6B3E3E; /* A muted red for alerts */
    color: #FFDADA; /* Light reddish text */
    border: 1px solid #805050;
    border-radius: 6px;
    padding: 10px 15px;
    font-size: 10pt;
    font-weight: 500;
    margin-bottom: 10px; /* Space below it */
}

/* QGroupBox section titles for SettingsDialog */
QGroupBox {
    border: 1px solid #3C3C50;
    border-radius: 8px;
    margin-top: 18px;
    margin-bottom: 18px;
    padding: 12px 16px 16px 16px;
    background-color: #23233A;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    color: #E0DFFF;
    font-size: 13.5pt;
    font-weight: 600;
    padding: 0 0 8px 0;
    margin-left: 2px;
}

QScrollArea {
    background: transparent;
    border: none;
}

QLabel, QRadioButton, QCheckBox, QComboBox, QTextEdit, QLineEdit {
    font-size: 11pt;
    color: #F0F0F5;
}

QTextEdit, QLineEdit {
    background-color: #23233A;
    border: 1px solid #3C3C50;
    border-radius: 5px;
    padding: 6px;
}

QComboBox {
    background-color: #23233A;
    border: 1px solid #3C3C50;
    border-radius: 5px;
    padding: 4px 8px;
}

QDialogButtonBox {
    margin-top: 18px;
}

/* Section Description labels for SettingsDialog */
QLabel#SectionDescription {
    color: #B0B0C0;
    font-size: 10.5pt;
    font-weight: 400;
    margin-bottom: 10px;
    margin-top: 2px;
    letter-spacing: 0.5px;
    qproperty-alignment: 'AlignHCenter';
}

/* QGroupBox section titles for SettingsDialog */
QGroupBox {
    border: 1px solid #3C3C50;
    border-radius: 12px;
    margin-top: 28px;
    margin-bottom: 28px;
    padding: 22px 24px 24px 24px;
    background-color: #23233A;
}
QGroupBox::title {
    subcontrol-origin: margin;
    subcontrol-position: top left;
    color: #E0DFFF;
    font-size: 16pt;
    font-weight: 700;
    letter-spacing: 1.2px;
    padding: 0 0 12px 0;
    margin-left: 2px;
    margin-bottom: 8px;
}

QScrollArea {
    background: transparent;
    border: none;
}

QLabel, QRadioButton, QCheckBox, QComboBox, QTextEdit, QLineEdit {
    font-size: 11pt;
    color: #F0F0F5;
}

QTextEdit, QLineEdit {
    background-color: #23233A;
    border: 1px solid #3C3C50;
    border-radius: 8px;
    padding: 10px 14px;
    min-width: 180px;
    max-width: 320px;
}

QComboBox {
    background-color: #23233A;
    border: 1px solid #3C3C50;
    border-radius: 8px;
    padding: 8px 14px;
    min-width: 180px;
    max-width: 260px;
}

QDialogButtonBox {
    margin-top: 24px;
    qproperty-centerButtons: true;
}
QDialogButtonBox QPushButton {
    min-width: 160px;
    max-width: 160px;
    border-radius: 8px;
    font-size: 11.5pt;
    font-weight: 600;
    margin: 0 10px;
}
QPushButton#PrimaryCTA, QDialogButtonBox QPushButton:default {
    background-color: #7B61FF;
    color: #FFFFFF;
    border: none;
    font-weight: 700;
}
QPushButton#PrimaryCTA:hover, QDialogButtonBox QPushButton:default:hover {
    background-color: #6A50DD;
}
QPushButton#PrimaryCTA:pressed, QDialogButtonBox QPushButton:default:pressed {
    background-color: #5840C0;
}
QPushButton.Secondary, QDialogButtonBox QPushButton {
    background-color: #353548;
    color: #AEAEB5;
    border: 1px solid #4A4A60;
    font-weight: 500;
}
QPushButton.Secondary:hover, QDialogButtonBox QPushButton:hover {
    background-color: #45455A;
    color: #F0F0F5;
    border-color: #55556F;
}
QPushButton.Secondary:pressed, QDialogButtonBox QPushButton:pressed {
    background-color: #2D2D3F;
}

/* Standardize button and input sizes, padding, and font */
QPushButton, QLineEdit, QTextEdit, QComboBox {
    min-height: 2.5em;
    min-width: 160px;
    font-size: 11pt;
    font-family: "Inter", "Segoe UI", Arial, sans-serif;
    padding: 10px 16px;
    border-radius: 8px;
}

/* Lighten secondary and disabled button backgrounds for clarity */
QPushButton.Secondary, QDialogButtonBox QPushButton {
    background-color: #39395A;
    color: #AEAEB5;
    border: 1px solid #4A4A60;
    font-weight: 500;
}
QPushButton.Secondary:disabled, QDialogButtonBox QPushButton:disabled {
    background-color: #2D2D3F;
    color: #88889A;
    border: 1px solid #3C3C50;
}
QPushButton:disabled {
    background-color: #2D2D3F;
    color: #88889A;
    border: 1px solid #3C3C50;
}

/* Improve hover/active feedback for all buttons */
QPushButton:hover, QDialogButtonBox QPushButton:hover {
    background-color: #45456A;
    color: #F0F0F5;
    border-color: #7B61FF;
}
QPushButton:pressed, QDialogButtonBox QPushButton:pressed {
    background-color: #353548;
    color: #F0F0F5;
}

/* Inputs: lighter background, clear focus */
QLineEdit, QTextEdit, QComboBox {
    background-color: #23233A;
    border: 1.5px solid #3C3C50;
    color: #F0F0F5;
    font-size: 11pt;
    border-radius: 8px;
    padding: 10px 14px;
}
QLineEdit:focus, QTextEdit:focus, QComboBox:focus {
    border: 1.5px solid #7B61FF;
    background-color: #28284A;
}
QLineEdit:disabled, QTextEdit:disabled, QComboBox:disabled {
    background-color: #2D2D3F;
    color: #88889A;
}

/* Ensure all QLabel text wraps and is centered by default */
QLabel {
    qproperty-wordWrap: true;
    qproperty-alignment: 'AlignHCenter | AlignVCenter';
    background: transparent;
}

/* Section separation: more vertical space between QGroupBox */
QGroupBox {
    margin-top: 32px;
    margin-bottom: 32px;
    padding: 22px 24px 24px 24px;
}
QGroupBox::title {
    margin-bottom: 12px;
}

/* Add tooltips for truncated text (handled in Python for dynamic content) */
/* No QSS for tooltips on overflow, but ensure QToolTip is styled */
QToolTip {
    background-color: #222235;
    color: #F0F0F5;
    border: 1px solid #7B61FF;
    padding: 8px 12px;
    border-radius: 6px;
    font-size: 10pt;
}